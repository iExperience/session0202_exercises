<h1> Question <%= @number %> </h1>
<style>
    body {
      text-align: left;
      background: url("http://i.imgur.com/dA9lwaH.jpg");
      background-size: cover;
      background-position: center;
      color: white;
      text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
      font-family: helvetica;
      font-size:40px
    }
    header {
      text-align: center;
      font-family: 'Gochi Hand', cursive;
      font-size: 35px;
      margin: -12px 0 0 0;
    }
    h2 {
      text-align: center;
      font-family: 'Gochi Hand', cursive;
      font-size: 20px;
      margin: -60px 0 0 0;
    }
    img {
      margin: 40px 0px 0px 0px;
      border: 7px solid white;
      border-radius: 20px;
    }
    div {
      height: 200px
      margin: 40px 0 -100px 0;
      border-radius: 12px;
    }
    p {
      color: rgba(255,255,255,1);
      background: rgba(0,0,0,0.4);
      border-radius: 20px;
      padding: 50px;
      line-height:28px;
      text-align: justify;
      bottom: 10px;
      margin: 10px;
      height: 20px;
      transition: height 2s;
    }
  </style>

<p> <%= @ask %> </p>



<% list = ["A", "B","C","D"] %>
<% index = 0 %>
<% number = @number.to_s %>
<ul style="list-style: none; ">
	<% @select.each do |option| %>
		<% checker = list[index].to_sym %>
		<li><a href ="<%= number %>/<%= checker %>"><%= option[0] %></a><%= option[1] %></li>
		<% index +=1 %>
	<% end %> 
</ul>













