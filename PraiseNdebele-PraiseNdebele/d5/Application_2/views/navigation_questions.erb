
<!DOCTYPE html>
<html>

<head>
	<title>Answer</title>
	<link href='/style2.css' rel='stylesheet' type='text/css' />
	<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>

</head>

<body>
<% @previous= (eval(@number.to_s + "-1").to_s)%>
<% @next = (eval(@number.to_s + "+1").to_s) %>

<% answers = ["D","C","B","D",
"C","A","D","B"] %>

<% if @option == answers[@index - 2] %>
	<h1><%= "Correct" %></h1>
	<h2 class="button"><a href ="../<%= @next %>"><button><%="Next" %></button></a></h2>	
<% else %>
	<h1><%= "Incorrect" %></h1>
	<h2 class="button"><a href ="../<%= @number %>"><button><%="Try again" %></button></a></h2>
<% end %>


</body>

</html>



