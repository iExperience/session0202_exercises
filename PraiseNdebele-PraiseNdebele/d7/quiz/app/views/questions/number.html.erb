<h1>Question <%= @number %></h1>

<h2><%= @ask %></h2>

<% list = ["A", "B","C","D"] %>
<% index = 0 %>
<% number = @number.to_s %>
<ul style="list-style: none; ">
	<% @select.each do |option| %>
		<% checker = list[index].to_sym %>
		<li><%= link_to option[0], answer_path(number, checker) %><%= option[1] %></li>
		<% index +=1 %>
	<% end %> 
</ul>
